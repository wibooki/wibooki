{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="row">
        <div class="col-xs-5 col-sm-3 left-column">
            <div class="col-sm-12 rounded-border-content">

                <div class="row profile-avatar">
                    <div class="col-sm-12">
                        {% if user is defined and user.getProfilePicturePath() is not empty %}
                            <img class="img-responsive img-center" src="{{ user.getWebProfilePicturePath() }}">
                        {% else %}
                            <img class="img-responsive img-center" src="{{ asset('images/profile/gravatar.svg') }}">
                        {% endif %}
                    </div>
                </div>
                <div class="row profile-type-account">
                    <div class="col-xs-4 padding-account-type">

                    </div>
                    <div class="col-xs-4 padding-account-type">
                        {% if user.premiumAccount is defined and user.premiumAccount is not empty %}
                            <img class="img-responsive img-center" src="{{ asset('images/profile/gravatar-premium.svg') }}">
                        {% endif %}
                    </div>
                    <div class="col-xs-4 padding-account-type">
                        {% if user.sponsorshipAccount is defined and user.sponsorshipAccount is not empty %}
                            <img class="img-responsive img-center" src="{{ asset('images/profile/gravatar-patrocinio.svg') }}">
                        {% endif %}
                    </div>

                </div>
                <div class="row">
                    <h1>@{{ user.username }}</h1>
                    <h2>{{ user.description }}</h2>
                </div>
            </div>
        </div>
        <div class="col-xs-7 col-sm-9">
            <div class="col-sm-12 rounded-border-content">
                <ul class="nav nav-pills profile-nav">
                    <li class="active">
                        <a  href="#itineraries" data-toggle="tab">Itinerarios</a>
                    </li>
                    <li><a href="#contents" data-toggle="tab">Contenidos</a>
                    </li>
                    <li><a href="#achievements" data-toggle="tab">Logros</a>
                    </li>
                </ul>
                <div class="tab-content ">
                    <div class="tab-pane active" id="itineraries">
                        {% include 'FOSUserBundle:Profile:show_itineraries_content.html.twig' %}
                    </div>
                    <div class="tab-pane" id="contents">
                        {% include 'FOSUserBundle:Profile:show_contents_content.html.twig' %}
                    </div>
                    <div class="tab-pane" id="achievements">
                        {% include 'FOSUserBundle:Profile:show_achievements_content.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
